                </div>

                <% if (typeof errorCode !=='undefined' ) { %>
                    <div class="error-code">
                        <%= errorCode %>
                    </div>
                    <% } %>

                        <h1 class="error-title">
                            <%= title %>
                        </h1>
                        <p class="error-message">
                            <%= message %>
                        </p>

                        <div class="error-actions">
                            <a href="/" class="btn btn-primary">üè† Go Home</a>
                            <% if (typeof showRetry !=='undefined' && showRetry) { %>
